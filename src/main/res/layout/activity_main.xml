<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_masjid"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/jadwal_sholat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iv_jadwal_sholat"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/image_jsolat"

                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="3dp"
                        android:contentDescription="TODO" />

                    <TextView
                        android:id="@+id/tv_jadwal_sholat"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/iv_jadwal_sholat"
                        android:text="Jadwal_Sholat"
                        android:textAlignment="center"

                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="25sp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/qurann"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iv_quran"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/image_aq"

                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="3dp"
                        android:contentDescription="TODO" />

                    <TextView
                        android:id="@+id/tv_quran"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/iv_quran"
                        android:text="Al_Quran"
                        android:textAlignment="center"

                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="25sp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/produk_halal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iv_produk_halal"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/image_halal"

                        android:layout_marginRight="6dp"
                        android:contentDescription="TODO"
                        />

                    <TextView
                        android:id="@+id/tv_produk_halal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/iv_produk_halal"
                        android:text="Produk_Halal"
                        android:textAlignment="center"

                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="25sp"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>